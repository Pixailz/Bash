user="pix"

# tzdata
timezone_loc="Europe/Paris"

# netplan
ip="192.168.0.122"
gateway="192.168.0.1"
dns_1="1.1.1.1"
dns_2="1.0.0.1"

# VSFTPD
vsftpd_user="ftpix"

# Sharedfolder

sharedfolder_user="${vsftpd_user}"
sharedfolder_path="/home/${user}/Dinosaure"
sharedfolder_name="SharedFolder"

# SSH
ssh_port="10122"

# VSFTPD
vsftpd_listen_port="10121"
vsftpd_ftp_data_port="10120"

vsftpd_pasv_enable="YES"
vsftpd_pasv_min_port="11100"
vsftpd_pasv_max_port="11110"

vsftpd_local_enable="YES"
vsftpd_write_enable="YES"
vsftpd_allow_writeable_chroot="YES"

vsftpd_chroot_local_user="YES"
vsftpd_chroot_list_enable="NO"

vsftpd_userlist_deny="NO"
vsftpd_userlist_enable="YES"
vsftpd_userlist_file="/etc/vsftpd.allowed_users"

vsftpd_ssl_enable="YES"
vsftpd_allow_anon_ssl="NO"
vsftpd_force_local_data_ssl="YES"
vsftpd_force_local_logins_ssl="YES"
vsftpd_require_ssl_reuse="NO"
vsftpd_ssl_ciphers="HIGH"
vsftpd_rsa_cert_file="/etc/ssl/certs/vsftpd.crt"
vsftpd_rsa_private_key_file="/etc/ssl/private/vsftpd.key"
